{
	"env": {
		"node": true,
		"es2020": true
	},

	"settings": {
		"import/resolver": {
			"node": {
				"paths": ["app", "tests"],
				"extensions": [".js", ".ts", ".d.ts"]
			},
			"alias": {
				"map": [
					["@utils", "./app/utils"],
					["@models", "./app/models"],
					["@validationSchemas", "./app/validationSchemas"],
					["@customTypes", "./app/types"]
				]
			}
		}
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["import"],
	"rules": {
		"@typescript-eslint/no-unused-vars": "warn",
		"import/no-unresolved": "error"
	}
}
